<Window x:Class="CSV_DataGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV_DataGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#f8f9fa">
        <Button Click="Button_Click"
                Content="Import CSV"
                VerticalAlignment="Top" HorizontalAlignment="Right" Padding="5" Margin="0 0 20 0" BorderThickness="0"/>
        <DataGrid x:Name="CsvDataGrid" 
                  Margin="20 70 20 20" Background="White"/>
    </Grid>
</Window>
