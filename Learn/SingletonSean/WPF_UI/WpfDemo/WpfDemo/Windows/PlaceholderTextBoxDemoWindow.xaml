<Window x:Class="WpfDemo.Windows.PlaceholderTextBoxDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.Windows" 
        xmlns:custom="clr-namespace:PlaceholderTextBoxControl;assembly=PlaceholderTextBoxControl"
        mc:Ignorable="d"
        Title="PlaceholderTextBoxDemoWindow" Height="450" Width="800">
    <Grid>
        <custom:PlaceholderTextBox
            Placeholder="Search"
            MaxWidth="300"
            Height="100"
            Padding="2"
            VerticalContentAlignment="Center"
            Background="Black"
            Foreground="White"
            FontSize="18"/>
    </Grid>
</Window>
